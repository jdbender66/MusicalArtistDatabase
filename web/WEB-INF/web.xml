<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>submitMessage</servlet-name>
        <servlet-class>jdb117.submitMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listAuthorMessages</servlet-name>
        <servlet-class>jdb117.listAuthorMessages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reviewAuthorMessage</servlet-name>
        <servlet-class>jdb117.reviewAuthorMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>acceptAuthorMessage</servlet-name>
        <servlet-class>jdb117.acceptAuthorMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submitMessage</servlet-name>
        <url-pattern>/submitMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listAuthorMessages</servlet-name>
        <url-pattern>/listAuthorMessages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reviewAuthorMessage</servlet-name>
        <url-pattern>/reviewAuthorMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>acceptAuthorMessage</servlet-name>
        <url-pattern>/acceptAuthorMessage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            loginpage.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
